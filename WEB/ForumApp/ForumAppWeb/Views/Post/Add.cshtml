@using ForumApp.Core.Models
@model PostModel

@{
    ViewBag.Title = "Add Product";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <form method="post">
        <div class="form-group">
            <div class="card">
                <div class="card-title">
                    <div class="mb-3">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" class="form-control" placeholder="Enter post title here">
                        <span asp-validation-for="Title" class="small text-danger"></span>
                    </div>
                </div>
                <div class="card-text">
                    <div class="mb-3">
                        <label asp-for="Content"></label>   
                        <textarea asp-for="Content" class="form-control" rows="3" placeholder="Enter your post here"></textarea>
                        <span asp-validation-for="Content" class="small text-danger"></span>
                        
                    </div>
                </div>
            </div>
        </div>
        <input class="btn-primary mt-3" type="submit" value="Create" />
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}