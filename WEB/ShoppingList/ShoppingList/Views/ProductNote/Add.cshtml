@model ProductNotesModel

@{
    ViewBag.Title = "Add Note";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <form method="post">
        <div class="form-group">
            <div class="mb-3">
                <label asp-for="Content"></label>
                <input asp-for="Content" class="form-control" placeholder="Content here">
                <span asp-validation-for="Content" class="small text-danger"></span>
            </div>
        </div>
        <input class="btn-primary mt-3" type="submit" value="Create" />
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
