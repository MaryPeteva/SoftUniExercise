<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlyToolsWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlyToolsWeb.styles.css" asp-append-version="true" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <style>
        body {
            background: linear-gradient(to bottom, #618685, #36486b);
            min-height: 100vh;
        }
    </style>
    <style>

        nav {
            display: flex;
            justify-content: space-between;
            padding: 10px 20px;
            order: -1;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-linear-gradient(to bottom, #d5f4e6, #80ced6) border-3 border-white">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="/css/Pictures/smallLogoFinal.png" alt="Company Logo" class="logo-img" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><b>Home</b></a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="toolsDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <b>Tools</b>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="toolsDropdown">
                                <a style="color: black;" class="dropdown-item" asp-controller="Home" asp-action="RentTools"><b>Rent tool</b></a>
                                <a style="color: black;" class="dropdown-item" asp-controller="Home" asp-action="ShareTools"><b>Share tool</b></a>
                            </div>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="tipsTricksDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <b>Tips and Tricks</b>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="tipsTricksDropdown">
                                <a style="color: black;" class="dropdown-item" asp-controller="Home" asp-action="BrowseTips"><b>Browse tips</b></a>
                                <a style="color: black;" class="dropdown-item" asp-controller="Home" asp-action="ShareTips"><b>Share Tips</b></a>
                            </div>
                        </li>
                    </ul>
                    <ul class="logon-block nav navbar-nav nav-list navbar-right u-unstyled">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login"><b>Log in</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Register"><b>Register</b></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </styleheader>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer text-muted">
        <div style="color:black; font:bold " class="container">
            &copy; 2024 - OnlyToolsWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy"><b>Privacy</b></a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>